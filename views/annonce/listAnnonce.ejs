<% include ./../partials/template %>
  <body>
      <% include ./../partials/header %>
      <% include ./../partials/nav %>
    <main role="main">
            <h2>Annonces</h2>
            <% anno.forEach(element => { %>
               <% if (element.libelle !== undefined ) { %> 
            <ul>
                <div class="row">
                     <div class="col-md-12">
                          <ul class="newest-auction">
                               <li>
                                    <img src="https://lareclame.fr/wp-content/uploads/2011/11/uncharted3-playstation-prev1.jpg" alt="">
                                    <div class="info">
                                         <h2 class="title"> <%= element.libelle %> </h2>
                                         <p class="desc"><%= element.description %></p>
                                         <a href="#">Détails</a>
                                         <h2 class="price"><%= element.prix_max %> €</h2>
                                         <p class="year">N°  <span class="font-red-thunderbird"><%= element.id_annonce %></span></p>
                                         <ul>
                                            <li>Tags<br/><%= element.cible %></li>
                                            <li>Annonceur<br><%= element.id_annonceur %></li>
                                            <% if (element.valide == false || element.valide == undefined)  { %>
                                            <form action="/annonce/<%=element._id%>" method="POST">
                                                <li class="btn btn-bid"> <button type="submit"> Valider</button></li>
                                            </form>
                                            <% } else if (element.valide == true) {  %>
                                                <li class="btn btn-bid"> Déjà valide</li>
                                            <% } %>
                                            <li class="btn btn-bid">Modifier</li>
                                            <li class="btn btn-bid">Supprimer</li>
                                         </ul>
                                    </div>
                               </li>
                          </ul>
                     </div>
                </div>
            </ul>
            <% } %> 
        <% }); %>
        </section>
    </main>
  </body>
</html>