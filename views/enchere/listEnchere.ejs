<% include ./../partials/template %>
  <body>
      <% include ./../partials/header %>
      <% include ./../partials/nav %>
    <main role="main">
            <h2>Enchères</h2>
               <% data.forEach(element => { %>
                         <% if (element.jeu !== undefined ) { %> 
                              <ul>
                                   <div class="row">
                                        <div class="col-md-12">
                                             <ul class="newest-auction">
                                                  <li>
                                                       <img src="https://lareclame.fr/wp-content/uploads/2011/11/uncharted3-playstation-prev1.jpg" alt="">
                                                       <div class="info">
                                                            <h2 class="title"> <%= element.jeu.nom_jeu %> </h2>
                                                            <a href="#">Détails</a>
                                                            <ul>
                                                            <% element.annonces.forEach(el => { %>
                                                                 <li class="btn btn-bid"><%= el.id_annonceur %></li>
                                                                 <li class="btn btn-bid"><%= el.libelle %></li>
                                                                 <li class="btn btn-bid"><%= el.prix_max %> €</li>
                                                            <% }); %>
                                                            <% if (element.done == false || element.done == undefined)  { %>
                                                                 <li class="btn btn-bid">Enchère en cours</li>
                                                            <% } else if (element.done == true) {  %>
                                                                 <li class="btn btn-bid"> Enchère terminée</li>
                                                            <% } %>
                                                            </ul>
                                                       </div>
                                                  </li>
                                             </ul>
                                        </div>
                                   </div>
                              </ul>
                         <% } %>
               <% }); %>
        </section>
    </main>
  </body>
</html>