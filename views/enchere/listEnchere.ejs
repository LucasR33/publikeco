<% include ./../partials/template %>
  <body>
      <% include ./../partials/header %>
      <% include ./../partials/nav %>
    <main role="main">
      <section class="panel important">
            <h2>Enchères</h2>
              <a href="addEnchere" ><button id="btnadd" type="button" class="btn btn-primary">Créer une nouvelle enchère</button></a>
      </section>



                                   <div class="row">
                                        <div class="col-md-12">
                                          <div class="bva2_0">

                                            <!-- [START]-auction-card -->

                                            <div class="w960 center-container">
                                              <div class="auction-cards-row">


                                                <ul>
