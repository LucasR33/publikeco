<% include ./../partials/template %>
  <body>
      <% include ./../partials/header %>
      <% include ./../partials/nav %>
    <main role="main">
            <h2>Enchères</h2>
            <% data.forEach(element => { %>
               <% if (element.libelle !== undefined ) { %> 
            <ul>
                <div class="row">
                     <div class="col-md-12">
                          <ul class="newest-auction">
                               <li>
                                    <img src="https://lareclame.fr/wp-content/uploads/2011/11/uncharted3-playstation-prev1.jpg" alt="">
                                    <div class="info">
                                         <h2 class="title"> <%= element.editeur %> </h2>
                                         <h2 class="title"> <%= element.annonce %> </h2>
                                         <a href="#">Détails</a>
                                         <h2 class="price"><%= element.prix_vainqueur %> €</h2>
                                         <p class="year">N°  <span class="font-red-thunderbird"><%= element.annonceur_vainqueur %></span></p>
                                         <ul>
                                            <% if (element.done == false || element.done == undefined)  { %>
                                                <li class="btn btn-bid">Enchère en cours</li>
                                            <% } else if (element.done == true) {  %>
                                                <li class="btn btn-bid"> Enchère terminée</li>
                                            <% } %>
                                         </ul>
                                    </div>
                               </li>
                          </ul>
                     </div>
                </div>
            </ul>
            <% } %> 
        <% }); %>
        </section>
    </main>
  </body>
</html>